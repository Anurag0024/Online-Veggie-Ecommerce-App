<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="210dp"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardElevation="3dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                   <TextView
                       android:id="@+id/offer_percent_id"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="20dp"
                       android:layout_marginTop="3dp"
                       android:textSize="12dp"
                       android:textColor="@color/black"
                       android:text="50 % Off" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/favorite"
                    android:layout_marginStart="80dp"/>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/vege_image_id"
                android:layout_width="120dp"
                android:src="@drawable/main"
                android:layout_height="80dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/vege_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:gravity="center"
                android:textSize="15dp"
                android:text="Green Onion"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/vege_weight_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:gravity="center"
                android:text="250 gm"
                android:textSize="10dp"/>
            <TextView
                android:id="@+id/vege_price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/black"
               android:gravity="center"
                android:text="60 Rs"/>
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:background="@drawable/round_btn_style"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:textSize="10dp"
                android:layout_gravity="center"/>




        </LinearLayout>

       
    </androidx.cardview.widget.CardView>
</LinearLayout>